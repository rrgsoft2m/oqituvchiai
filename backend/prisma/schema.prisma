generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id                    Int          @id @default(autoincrement())
  firstName             String
  lastName              String
  login                 String       @unique
  password              String
  role                  String       @default("FREE") // FREE, USTOZ, KATTA_USTOZ
  subscriptionExpiresAt DateTime?
  generationsCount      Int          @default(0)
  generations           Generation[]
  createdAt             DateTime     @default(now())
  updatedAt             DateTime     @updatedAt
}

model Generation {
  id        Int      @id @default(autoincrement())
  userId    Int
  user      User     @relation(fields: [userId], references: [id])
  subject   String
  class     Int
  language  String
  topic     String
  type      String   @default("ALL") // The type of content generated
  content   Json     // Storing all 6 generated components here
  createdAt DateTime @default(now())
}
